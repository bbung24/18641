<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.activities.DistSummActivity$PlaceholderFragment" >

        <TextView
            android:id="@+id/symptom_summ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="TextView" />
        
        <Button
            android:id="@+id/voc_view"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/pic_view"
			android:layout_below="@+id/pic_view"
			android:layout_centerHorizontal="true"
            android:text="@string/voc_view" />

        <Button
            android:id="@+id/create_checkups"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/voc_view"
			android:layout_below="@+id/voc_view"
			android:layout_centerHorizontal="true"
            android:text="@string/create_checkups" />

        <ImageView
            android:id="@+id/pic_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/symptom_summ"
			android:layout_below="@+id/symptom_summ"
			android:layout_centerHorizontal="true"
            android:src="@drawable/abc_ab_bottom_solid_light_holo"
            android:contentDescription="@string/pic_view" />
        
    </RelativeLayout>
</ScrollView>